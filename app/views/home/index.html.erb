<div class="min-h-screen flex items-center justify-center bg-gray-100 px-4">
  <div class="w-full max-w-md bg-white border border-gray-200 rounded-2xl shadow-lg p-8 text-center">
    <% if user_signed_in? %>
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">
        ðŸ‘‹ Hello, <%= current_user.name %>!
      </h2>

      <%= button_to "Logout", "/logout", method: :delete, class: "mt-4 px-6 py-3 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition" %>
    <% else %>
      <h1 class="text-3xl font-bold text-gray-800 mb-2">Welcome</h1>
      <p class="text-gray-500 mb-6">Please sign in to continue</p>

      <%= form_tag('/oauth/google_oauth2', method: 'post', data: { turbo: "false" }) do %>
    
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
     Sign in with Google
</button>
      <% end %>
    <% end %>
  </div>
</div>

