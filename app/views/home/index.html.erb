  <div class="w-full max-w-md bg-white rounded-2xl shadow-2xl shadow-gray-300/50 p-8 text-center">
    <% if user_signed_in? %>
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">
        ðŸ‘‹ Hello, <%= current_user.name %>!
      </h2>
    <% else %>
