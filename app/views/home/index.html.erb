<div class="mx-auto">
  <div class="mx-auto max-w-xl bg-white rounded-2xl shadow-xl p-8 text-center">
    <% if user_signed_in? %>
      <h2 class="text-2xl font-semibold text-gray-800 mb-4">
        <%= current_user.name %>
      </h2>
      <h3 class="text-2xl font-semibold text-gray-800 mb-4">
        <%= current_user.team %>
      </h3>
    <% else %>
      <p class="text-gray-500">You are not signed in.</p>
    <% end %>
  </div>
</div>
