<% content_for :title, "Users" %>

<div class="max-w-5xl mx-auto px-6 py-10">
  <% if notice.present? %>
    <div class="mb-6">
      <p class="py-3 px-4 bg-green-50 text-green-800 font-medium border border-green-200 rounded-lg shadow-sm" id="notice">
        <%= notice %>
      </p>
    </div>
  <% end %>

  <div class="flex flex-col sm:flex-row justify-between items-center mb-10">
    <h1 class="text-3xl font-bold text-gray-800">Users</h1>
  </div>

  <% if @users.any? %>
    <div class="space-y-6">
     <% @users.each do |user| %>
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-6 bg-white border border-gray-200 rounded-xl shadow-sm p-6">
    <div class="text-sm text-gray-700 space-y-1">
      <p><span class="font-semibold text-gray-900">Name:</span> <%= user.name %></p>
      <p><span class="font-semibold text-gray-900">Email:</span> <%= user.email %></p>
      <p><span class="font-semibold text-gray-900">Role:</span> <%= user.role %></p>
      <p><span class="font-semibold text-gray-900">Team:</span> <%= user.team || "-" %></p>
    </div>

    <div class="mt-4 sm:mt-0">
      <%= link_to "Edit", edit_user_path(user),
          class: "inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-indigo-700  rounded-md shadow-sm transition duration-150" %>
    </div>
  </div>
<% end %>

    </div>
  <% else %>
    <div class="text-center py-16 text-gray-500 text-lg font-medium">
      No users found.
    </div>
  <% end %>
</div>
