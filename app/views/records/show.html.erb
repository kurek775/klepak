<% if notice.present? %>
  <div class="mb-6 max-w-xl mx-auto rounded-lg bg-green-50 border border-green-200 text-green-800 px-4 py-3">
    <p><%= notice %></p>
  </div>
<% end %>

<div class="max-w-xl mx-auto bg-white p-6 rounded-2xl shadow-md">
  <%= render @record %>

  <div class="mt-6 flex flex-wrap items-center gap-4 text-sm">
    <%= link_to "✏️ Edit this record", edit_record_path(@record),
          class: "text-indigo-600 hover:underline font-medium" %>

    <%= link_to "← Back to records", records_path,
          class: "text-gray-600 hover:text-gray-800 hover:underline font-medium" %>

    <%= button_to "🗑 Destroy this record", @record,
          method: :delete,
          data: { confirm: "Are you sure?" },
          class: "bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 ml-auto" %>
  </div>
</div>
