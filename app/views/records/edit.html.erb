<% content_for :title, "Editing record" %>

<div class="max-w-xl mx-auto mt-10">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Editing Record</h1>

  <%= render "form", record: @record %>

  <div class="mt-6 flex items-center justify-between text-sm text-indigo-600">
    <%= link_to "← Show this record", @record, class: "hover:underline" %>
    <%= link_to "Back to records →", records_path, class: "hover:underline" %>
  </div>
</div>
